<html t:type="layout" title="${message:title}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
<t:form t:id="passwordForm">
	<p>${message:enter-existing-password}</p>
	<t:passwordfield t:id="passwordOld" class="input-block-level" validate="required" placeholder="${message:password}"/>
	<p>${message:enter-new-password}</p>
	<t:passwordfield t:id="passwordNew" class="input-block-level" validate="required" placeholder="${message:password}"/>
	<p>${message:repeat-new-password}</p>
	<t:passwordfield t:id="passwordNew1" class="input-block-level" validate="required" placeholder="${message:password}"/>
	<t:submit class="btn btn-large btn-primary" value="${message:send}"/>
</t:form>
</html>
